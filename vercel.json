{
  "version": 2,
  "builds": [
    { "src": "api/addon.js", "use": "@vercel/node" },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "*.json", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/(realdebrid|alldebrid|torbox)=[^/]+/(.*)",
      "dest": "/api/addon.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    },
    { "src": "/icon.png", "dest": "/icon.png" },
    { "src": "/banner.jpg", "dest": "/banner.jpg" }
  ]
}
